<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Bootstrap CSS -->
    <!-- https://cdnjs.com/libraries/twitter-bootstrap/5.0.0-beta1 -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.0-beta1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
    <!-- Icons: https://getbootstrap.com/docs/5.0/extend/icons/ -->
    <!-- https://cdnjs.com/libraries/font-awesome -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />
    <link rel="stylesheet" href="~/wwwroot/User/css/style.css">
    <title>Trang chủ</title>
</head>
<body>
    <div class="container-fluid">
        <!--header bố cục trang -->
        @{
            Html.RenderPartial("_Header");
        }
        <!--menu-->
        @{
            Html.RenderPartial("_Menu");
        }
        <!--menu-->
        <!--header bố cục trang -->
        @RenderBody()

        <!--footer bố cục trang -->

        <div class="footer-widget">
            <div class="container">
                <div class="row">
                    <div class="col-4">
                        <div class="single-widget">
                            <h2>Dịch vụ</h2>
                            <ul class="nav nav-pills nav-stacked">
                                <li><a href="#">Điều khoản và dịch vụ</a></li>
                                <li><a href="#">Hướng dẫn mua hàng</a></li>
                                <li><a href="#">Thông tin chuyển khoản</a></li>

                            </ul>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="single-widget">
                            <h2>Chính sách</h2>
                            <ul class="p-0">
                                <li><a href="#">Chính sách vận chuyển</a></li>
                                <li><a href="#">Chính sách đổi trả</a></li>
                                <li><a href="#">Chính sách bảo hành sản phẩm</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="single-widget">
                            <h2>Đăng kí Email</h2>
                            <form action="#" class="searchform">
                                <input type="text" class="form-control my-3" placeholder="Vui lòng điền Email " />
                                <p>Để nhận những thông tin khuyến mãi <br /></p>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="footer-bottom">
            <div class="container">
                <div class="row">
                    <p class="pull-left">Copyright © 2021 Tam Anh-SHOPPER Inc. All rights reserved.</p>
                    <p class="pull-right">Designed by <span><a target="_blank" href="http://www.themeum.com">Themeum</a></span></p>
                </div>
            </div>
        </div>
        <!--footer bố cục trang -->
    </div>
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.0-beta1/js/bootstrap.bundle.min.js"></script>
    <script src="~/wwwroot//js/swiper.js"></script>
</body>
</html>
