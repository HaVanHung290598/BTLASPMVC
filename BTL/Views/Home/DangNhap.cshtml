@model BTL.Models.TaiKhoan

@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Đăng nhập | Đăng kí</title>
    <link rel="stylesheet" href="~/wwwroot/User/css/login.css" />
</head><!--/head-->

<body>
    <!--header bố cục trang -->
    <div class="login-wrap" style="margin-top: 30px">
        <div class="login-html" style="background-color: burlywood">
            <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label style="font-weight: bolder" for="tab-1" class="tab">ĐĂNG NHẬP</label>
            <input id="tab-2" type="radio" name="tab" class="sign-up"><label style="font-weight: bolder" for="tab-2" class="tab">ĐĂNG KÝ</label>
            <div class="login-form">
                <div class="sign-in-htm">
                    @using (Html.BeginForm("DangNhap", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                    <div class="group">
                        
                        @Html.TextBoxFor(m => m.tenDangNhap, "", new { @class = "form-control", @placeholder = "Tên Đăng Nhập" })
                    </div>
                        <div class="group">
                            @Html.TextBoxFor(m => m.password, "", new { @class = "form-control", @Type = "password", @placeholder = "Mật Khẩu" })
                        </div>
                        <div class="group">
                            <input id="check" type="checkbox" class="check" checked>
                            <label for="check"><span class="icon"></span> Giữ đăng nhập lần sau</label>
                        </div>
                        <div class="group">
                            <input style="background-color: aliceblue; color: black; font-weight: bolder" type="submit" class="button" value="Đăng nhập">
                        </div>
                    }
                    <div class="hr"></div>
                    <div class="foot-lnk">
                        <a href="#forgot">Quên mật khẩu?</a>
                    </div>
                </div>
                <div class="sign-up-htm">
                    <div class="group">
                        <label style="color: black; font-weight: bold" for="user" class="label">Tên đăng nhập</label>
                        <input id="user" type="text" class="input">
                    </div>
                    <div class="group">
                        <label style="color: black; font-weight: bold" for="pass" class="label">Mật khẩu</label>
                        <input id="pass" type="password" class="input" data-type="password">
                    </div>
                    <div class="group">
                        <label style="color: black; font-weight: bold" for="pass" class="label">Nhập lại mật khẩu</label>
                        <input id="pass" type="password" class="input" data-type="password">
                    </div>
                    <div class="group">
                        <label style="color: black; font-weight: bold" for="pass" class="label">Địa chỉ email</label>
                        <input id="pass" type="text" class="input">
                    </div>
                    <div class="group">
                        <input style="background-color: aliceblue; color: black; font-weight: bolder" type="submit" class="button" value="Đăng ký">
                    </div>
                    <div class="hr"></div>
                </div>
            </div>
        </div>
    </div>

   


    <!--header bố cục trang -->

  
</body>
</html>