
@{
    ViewBag.Title = "TaiKhoan";
}


<div class="container">
    <div class="row">
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="content my-5">
                    @{
                        string ImagePath = "~/wwwroot/Images/" + Session["Anh"];
                    }
                    <img src="@Url.Content(ImagePath)" style="width: 600px;height: 600px" alt="Alternate Text" />
            </div>
        </div>
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="detail my-5 ps-5">
                <p><h3>@Session["HoTen"]</h3></p>
                <h5>Tên Đăng Nhập: </h5><p>@Session["Email"]</p>
                <h5>Địa chỉ: </h5><p>@Session["DiaChi"]</p>
                <h5>Số điện thoại: </h5><p>@Session["sdt"]</p>
                <h5>Địa chỉ email: </h5><p>@Session["mail"]</p>
            </div>

        </div>
    </div>
</div>
